<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root maxHeight="Infinity" maxWidth="Infinity" style="-fx-background-color: #1e1f22;" stylesheets="@../css/generalstyle.css, @../css/titlebar.css" type="BorderPane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox>
            <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="Focus Tasks" styleClass="focus-task-title"/>
         <padding>
            <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
         </padding>
        </HBox>
    </top>

    <center>
        <ListView fx:id="taskListView" maxHeight="Infinity" maxWidth="Infinity" />
    </center>

    <bottom>
        <HBox alignment="CENTER" prefHeight="55.0" prefWidth="248.0" spacing="10" HBox.hgrow="ALWAYS">
            <TextField fx:id="taskInput" prefHeight="28.0" prefWidth="157.0" promptText="New task..." />
            <Button fx:id="addTaskButton" prefHeight="23.0" prefWidth="54.0" styleClass="window-close-btn" text="Add" />
         <padding>
            <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
         </padding>
        </HBox>
    </bottom>
</fx:root>
