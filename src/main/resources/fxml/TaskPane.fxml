<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml"
         style="-fx-background-color: #1e1f22;">
    <top>
        <Label text="Focus Tasks" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
    </top>

    <center>
        <ListView fx:id="taskListView"/>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="taskInput" promptText="New task..." />
            <Button text="Add" fx:id="addTaskButton" />
        </HBox>
    </bottom>
</fx:root>
