<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml"
         style="-fx-background-color: #1e1f22;">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="timerLabel"
                   text="00:00"
                   style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="startButton" text="Start" styleClass="tomato-button"/>
                <Button fx:id="pauseButton" text="Pause" styleClass="tomato-button"/>
                <Button fx:id="resetButton" text="Reset" styleClass="tomato-button"/>
            </HBox>
        </VBox>
    </center>
</fx:root>
