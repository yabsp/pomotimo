<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root styleClass="root-pane" type="BorderPane" xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox fx:id="timerContainer" alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS">
            <Label fx:id="stateLabel" styleClass="state-label" text="Focus" />
            <Label fx:id="timerLabel" styleClass="timer-label" />
            <Label fx:id="cycleLabel" styleClass="cycle-label" />

            <HBox alignment="CENTER" spacing="15">
                <padding>
                    <Insets top="10.0" />
                </padding>
                <Button fx:id="startBtn" styleClass="action-button" text="Start" />
                <Button fx:id="resetBtn" styleClass="secondary-button" text="Reset" />
                <Button fx:id="skipBtn" styleClass="icon-button">
                    <graphic>
                        <FontIcon iconColor="white" iconLiteral="fas-step-forward" iconSize="17"/>
                    </graphic>
                </Button>
            </HBox>
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="soundToggleBtn" styleClass="icon-button"/>
                <Button fx:id="playBtn" styleClass="icon-button"/>
            </HBox>
        </VBox>
    </center>
</fx:root>