<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.control.ComboBox?>

<fx:root styleClass="root-pane" prefWidth="300" stylesheets="@../css/style-dark.css" type="BorderPane" xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox fx:id="topBox" alignment="CENTER_RIGHT">
            <Button fx:id="closeBtn" styleClass="close-btn">
                <graphic>
                    <FontIcon iconColor="white" iconLiteral="fas-window-close" />
                </graphic>
            </Button>
        </HBox>
    </top>
    <center>
        <GridPane hgap="10" vgap="15">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="120.0" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>

            <Label styleClass="form-label" text="Preset Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="nameField" promptText="e.g. Study Session" styleClass="form-text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label styleClass="form-label" text="Focus Time" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="focusTimeField" promptText="MM:SS" styleClass="form-text-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label styleClass="form-label" text="Short Break" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="shortBreakField" promptText="MM:SS" styleClass="form-text-field" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label styleClass="form-label" text="Long Break" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="longBreakField" promptText="MM:SS" styleClass="form-text-field" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label styleClass="form-label" text="Pomo Cycles" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="cycleField" promptText="e.g. 4" styleClass="form-text-field" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Alarm Sound" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <ComboBox fx:id="soundSelectBox" prefWidth="200" promptText="Select a sound..." GridPane.columnIndex="1" GridPane.rowIndex="5" />

        </GridPane>
    </center>
    <bottom>
        <HBox fx:id="bottomBox" alignment="CENTER_RIGHT" spacing="15">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Button fx:id="setDefaultsBtn" mnemonicParsing="false" styleClass="secondary-wide-button" text="Reset to Defaults" />
                <Button fx:id="saveBtn" mnemonicParsing="false" styleClass="action-button" text="Save" />
            </children>
        </HBox>
    </bottom>
</fx:root>